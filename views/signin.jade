extends layout

block content
  h1= title
  p #{title} to chat
  form(name="sign-in", id="login", method="post")
    p Username:
    input(type="text", id="usr", name="username")
    p Password:
    input(type="password", name="password")
    p
    input(type="submit", value="Sign in")
  p Dont have an account?
    a(href="/signup") Sign up